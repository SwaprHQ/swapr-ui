{
  "name": "swapr-ui",
  "repository": "https://github.com/SwaprHQ/swapr-ui-lib",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "packageManager": "bun@1.0.6",
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:components": "turbo run build --filter=./packages/components",
    "build:website": "turbo run build --filter=./apps/website",
    "clean": "turbo run clean && npx rimraf node_modules && npx rimraf .turbo",
    "dev": "turbo run dev",
    "dev:components": "cd packages/components && bun run storybook",
    "dev:website": "turbo run dev --filter=./apps/website",
    "start": "turbo run start"
  },
  "devDependencies": {
    "eslint-config-turbo": "latest",
    "turbo": "^1.9.4"
  }
}
